{
  "name": "@akijoey/react-components",
  "version": "0.0.5",
  "description": "React components with custom styles.",
  "main": "dist/index.js",
  "files": [
    "dist/",
    "assets"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build:script": "tsc --outDir dist",
    "build:style": "node-sass src/styles/index.scss dist/index.css",
    "build": "npm run clean && npm run build:script && npm run build:style",
    "lint:script": "eslint --ignore-path .gitignore .",
    "lint:style": "stylelint -i .gitignore **/*.{scss,sass,css}",
    "lint": "npm run lint:script && npm run lint:style",
    "test": "npm run lint",
    "format": "prettier -w ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akijoey/react-components.git"
  },
  "keywords": [
    "react"
  ],
  "author": "AkiJoey <akijoey@akijoey.com> (https://akijoey.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/akijoey/react-components/issues"
  },
  "homepage": "https://github.com/akijoey/react-components#readme",
  "dependencies": {
    "@types/classnames": "^2.2.11",
    "classnames": "^2.2.6"
  },
  "devDependencies": {
    "@akijoey/eslint-config": "latest",
    "@akijoey/prettier-config": "latest",
    "@akijoey/stylelint-config": "latest",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "eslint": "^7.14.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.8.0",
    "stylelint-scss": "^3.18.0",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "prettier": "@akijoey/prettier-config",
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": "eslint --fix",
    "*.{scss,sass,css}": "stylelint --fix",
    "*.{ts,tsx,js,scss,sass,css,html,json,yml,md}": "prettier -w"
  }
}
